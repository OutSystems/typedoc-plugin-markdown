{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2015",
    "lib": ["es2016", "dom"],
    "typeRoots": ["node_modules/@types"]
  }
}
